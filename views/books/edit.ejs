<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center">Edit <%= book.name %></h1>
      <div style="width: 30%; margin: 29px auto">
        <form class="" action="/books/<%= book._id %>?_method=PUT" method="POST">
          <div class="form-group">
            <input class="form-control" type="text" name="name" id="name" value="<%= book.name %>">
          </div>
          <div class="form-group">
            <input class="form-control" type="number" name="price" id="price" value=" <%= book.price %>" min="0.01" step="0.01">
          </div>
        <div class="form-group">
            <input class="form-control" type="text" name="image" id="image" value="<%= book.image %>">
        </div>
        <div class="form-group">
        <input class="form-control" type="text" name="description" id="description" value="<%= book.description %>">
    </div>

        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block"type="submit" name="button">Submit</button>
      </div>
        </form>
        <a href="/books">Go back</a>

      </div>
      </div>

</div>

<% include ../partials/footer %>
